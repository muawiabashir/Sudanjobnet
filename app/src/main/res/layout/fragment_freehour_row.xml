<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"

    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/clogo11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/title11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/clogo11"
            android:text="Title"
            android:textStyle="bold"

            android:layout_toEndOf="@+id/clogo11" />

        <TextView
            android:id="@+id/company_name11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title11"
            android:drawableLeft="@drawable/ic_action_domain"
            android:drawablePadding="5dp"


            android:drawableStart="@drawable/ic_action_domain"
            android:gravity="left|center_vertical"
            android:layout_toRightOf="@+id/clogo11"
            android:text="companyname"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/closing11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_name11"
            android:layout_toRightOf="@+id/clogo11"
            android:drawableLeft="@drawable/ic_action_date"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_action_date"
            android:gravity="left|center_vertical"
            android:text="Closing date"
            android:layout_toEndOf="@+id/clogo11"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/pid11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing date"
            android:visibility="gone" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

